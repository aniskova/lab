<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <jsp-config>
        <taglib>
            <taglib-uri>/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/c.tld</taglib-location>
        </taglib>
    </jsp-config>
    <welcome-file-list>
        <welcome-file>start</welcome-file>
    </welcome-file-list>
    <resource-ref>
       <description>DB Connection</description>
        <res-ref-name>jdbc/todoapp</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <filter>
        <filter-name>Trim Filter</filter-name>
        <filter-class>by.gsu.epamlab.util.TrimFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Trim Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>Auth Filter</filter-name>
        <filter-class>by.gsu.epamlab.util.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Auth Filter</filter-name>
        <url-pattern>/todo/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>fileOperation</display-name>
        <servlet-name>fileOperation</servlet-name>
        <servlet-class>by.gsu.epamlab.controller.DBFileOperationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileOperation</servlet-name>
        <url-pattern>/fileOperation</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>LogoutServlet</display-name>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>StartServlet</display-name>
        <servlet-name>StartServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.controller.StartServlet</servlet-class>
        <init-param>
            <param-name>userDAOImpl</param-name>
            <param-value>db</param-value>
        </init-param>
        <init-param>
            <param-name>taskDAOImpl</param-name>
            <param-value>db</param-value>
        </init-param>
        <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>RegistrationServlet</display-name>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>TodoServlet</display-name>
        <servlet-name>TodoServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.controller.TodoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TodoServlet</servlet-name>
        <url-pattern>/todo</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>ChangeStateServlet</display-name>
        <servlet-name>ChangeStateServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.controller.ChangeStateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeStateServlet</servlet-name>
        <url-pattern>/changeState</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>UpdateServlet</display-name>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>by.gsu.epamlab.controller.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
</web-app>